<% layout('layout/boilerplate') %>
    <div id="clusterMap"></div>

    <h1>All Campgrounds</h1>
    <div>
        <a class="btn btn-success mb-3" href="/campgrounds/new">+New Campground</a>
    </div>
    <p class="text-muted">Campgrounds on this page are fictitious and have been randomly generated to showcase website
        functionalities.</p>
    <% for (let campground of campgrounds){ %>
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <img class="img-fluid campImg" src=<%=campground.images[0] ? campground.images[0].url : "" %> >
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= campground.title %>
                        </h5>
                        <p class="class-text">
                            <%= campground.description %>
                        </p>
                        <p class="class-text"> <small class="text-muted">
                                <%= campground.location %>
                            </small>
                        </p>
                        <a class="btn btn-primary" href="campgrounds/<%= campground._id%>">View <%= campground.title %>
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <% } %>

            <script>
                const mapBoxToken = '<%-process.env.MAPBOX_TOKEN%>';
                const campgrounds = { features:<%-JSON.stringify(campgrounds)%> };
            </script>
            <script src="/scripts/clusterMap.js"></script>